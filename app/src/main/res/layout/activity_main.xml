<?xml version="1.0" encoding="utf-8"?>
<com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shadowOffsetX="30"
    app:shadowOffsetY="30"
    tools:context="com.sdsmdg.harjot.materialshadowsdemo.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        android:src="@drawable/poly" />

    <com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:shadowOffsetX="-20"
        app:shadowOffsetY="0">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="50dp"
            android:layout_centerInParent="true"
            android:elevation="18dp"
            android:background="#FFFFFF"
            android:src="@drawable/poly" />

    </com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>

</com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>
